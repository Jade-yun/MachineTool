QMainWindow{
 background-color:qlineargradient(spread:reflect, x1:0.462, y1:0.477, x2:0.453, y2:1, stop:0.33724 rgba(53,246,38, 255), stop:0.68099 rgba(53,246,38, 255), stop:0.816406 rgba(53,246,38, 255), stop:0.976562 rgba(255, 255, 255, 255));
